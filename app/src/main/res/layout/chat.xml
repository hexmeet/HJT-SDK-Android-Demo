<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/White"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/chat"
            android:textColor="@color/title_bar"
            android:padding="15dp"
            android:textSize="@dimen/title_bar_font_size" />

        <ImageView
            android:id="@+id/create_group_chat"
            android:layout_width="@dimen/group_padding"
            android:layout_height="@dimen/group_padding"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/chat_new" />
    </RelativeLayout>



    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>