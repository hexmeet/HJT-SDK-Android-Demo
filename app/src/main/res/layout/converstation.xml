<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1024x768">

    <SurfaceView
        android:id="@+id/dummyPreviewView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/out_audio_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_audio_only"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/audio_mode_btn"
            android:layout_width="@dimen/button_audio"
            android:layout_height="@dimen/button_audio"
            android:text="@string/switch_to_video"
            android:layout_centerInParent="true"
            android:background="@drawable/buttom_bg"
            android:textColor="@color/White"
            android:textSize="@dimen/button_size"
            android:textAllCaps="false"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/record_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/button_circle_shape"
        android:text="@string/record"
        android:drawableLeft="@drawable/image_recording"
        android:drawablePadding="4dp"
        android:padding="5dp"
        android:textColor="@color/White"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_marginLeft="@dimen/content_margin"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/audio_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""
        android:textColor="@color/White"
        android:background="@drawable/button_circle_shape"
        android:layout_toRightOf="@id/record_view"
        android:layout_marginLeft="@dimen/indicator_margin"
        android:gravity="center"
        android:padding="5dp"
        android:drawableLeft="@drawable/tip_audio_mode"
        android:drawablePadding="4dp"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/content_margin"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/layout_toast"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        >

        <TextView
            android:id="@+id/network_condition_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/warntoast_bg"
            android:lineSpacingMultiplier="1.3"
            android:padding="8dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/mute_speaking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/warntoast_bg"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:visibility="gone"
            />

    </RelativeLayout>
    <include
        android:id="@+id/control_layout"
        layout="@layout/converstation_control" />
</RelativeLayout>