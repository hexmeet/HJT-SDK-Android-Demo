<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/invite_border_shadow"
    android:layout_gravity="center"
    >
    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="@color/sub_title_bar"
        android:background="@drawable/invite_border_shadow_top"
        />
    <TextView
        android:id="@+id/privacy_policy_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy_one"
        android:textSize="15sp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="6dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/font_color_313131"
        />

    <TextView
        android:id="@+id/privacy_policy_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy_two"
        android:textSize="15sp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/font_color_313131"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy_three"
        android:textSize="15sp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="6dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/sub_title_bar"
        />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/btn_select_cancel"
            android:gravity="center"
            android:text="@string/no_use"
            android:textAllCaps="false"
            android:textColor="@drawable/popup_key_label"
            android:textSize="16sp"

            />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@drawable/btn_private_login"
            android:gravity="center"
            android:text="@string/agree"
            android:textAllCaps="false"
            android:textColor="@drawable/color_text_join"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>