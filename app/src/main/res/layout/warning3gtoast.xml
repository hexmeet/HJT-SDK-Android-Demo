<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/toast_layout_root" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="10dp" >
	
	<ImageView android:id="@+id/image" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:src="@drawable/warning3g"
		/>	
		
	<TextView android:id="@+id/warning3gtv" 
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_gravity="center_vertical" android:text="@string/DATATRAFFIC_PROMPT"
		android:textSize="18dip"/>
</LinearLayout>