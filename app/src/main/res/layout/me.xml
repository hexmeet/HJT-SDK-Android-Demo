<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <RelativeLayout
        android:id="@+id/me_info"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:padding="10dp"
        android:background="@drawable/bg_click_item_colors">

        <com.hexmeet.hjt.utils.MLRoundedImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_contact" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrow_right"
            android:layout_toRightOf="@id/avatar"
            >
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:textColor="@drawable/popup_key_label"
                android:textSize="22sp"
                android:text="12345"
                />

            <TextView
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:layout_below="@id/username"
                android:textColor="@color/sub_title_bar"
                android:text="12345"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_setting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_click_item_color">

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="@dimen/me_icon_wh"
            android:layout_height="@dimen/me_icon_wh"
            android:src="@drawable/icon_setting"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:layout_toRightOf="@+id/setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@drawable/popup_key_label"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_click_item_color">

        <ImageView
            android:id="@+id/icon_password"
            android:layout_width="@dimen/me_icon_wh"
            android:layout_height="@dimen/me_icon_wh"
            android:src="@drawable/icon_password"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:layout_toRightOf="@+id/icon_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/password"
            android:textColor="@drawable/popup_key_label"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_share"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_click_item_color">

        <ImageView
            android:id="@+id/icon_invite"
            android:layout_width="@dimen/me_icon_wh"
            android:layout_height="@dimen/me_icon_wh"
            android:src="@drawable/icon_invite"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:layout_toRightOf="@+id/icon_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/invite_friends"
            android:textColor="@drawable/popup_key_label"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_click_item_color">

        <ImageView
            android:id="@+id/icon_about"
            android:layout_width="@dimen/me_icon_wh"
            android:layout_height="@dimen/me_icon_wh"
            android:src="@drawable/icon_about"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/text_about"
            android:layout_toRightOf="@+id/icon_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/about_hexmeet"
            android:textColor="@drawable/popup_key_label"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/upgrade_hint_me"
            android:layout_toRightOf="@+id/text_about"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/notice_version_img"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
</LinearLayout>