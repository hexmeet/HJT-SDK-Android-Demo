<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:text="12:13"
        android:visibility="gone"
        />

    <com.hexmeet.hjt.utils.MLRoundedImageView
        android:id="@+id/right_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_right_time"
        android:src="@drawable/icon_contact"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_right_time"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        >
        <TextView
            android:id="@+id/chat_right_username"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="demo"
            android:textSize="@dimen/groupchat_text_size"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/right_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:background="@drawable/chat_me"
            android:text=""
            android:textColor="@color/title_bar"
            android:textSize="15sp"
            android:includeFontPadding="false"
            />
    </LinearLayout>

</RelativeLayout>